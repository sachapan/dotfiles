set encoding=UTF-8
set nocompatible
set nocp
set backspace=2
set nobackup
"set nowritebackup
"set noswapfile
set history=5000
set ruler
set number
set relativenumber
set showcmd
set incsearch
set laststatus=2
set autowrite
set modelines=0
set nomodeline
set vb noerrorbells

call plug#begin()
" Plug 'tpope/vim-commentary'
 Plug 'vim-airline/vim-airline'
